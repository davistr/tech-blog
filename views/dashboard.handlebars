<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Post</label>
      {{!-- <input id="post-content" name="post-content" /> --}}
      <textarea id="post-content" name="post-content"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts:</h2>
  <div class="posts">
    {{#each posts as |post|}}
    <card class="post-cards">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </card>
    {{/each}}
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>